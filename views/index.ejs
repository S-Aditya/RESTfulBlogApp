<%- include("partials/header") %>

<h1>INDEX PAGE</h1>

<% blogs.forEach(function(blog){ %>
    <h2> <%= blog.title %> </h2>
    <img src=" <%= blog.image %> ">
    <span> <%= blog.created %> </span>
    <p> <%= blog.body.substring(0,100) %>......</p>
    <a href="/blogs/<%= blog._id %>">Read More</a>
<% }) %>

<form style="width:20%;" action="/blogs/new" method="GET">
    <button class="btn btn-primary btn-lg btn-block" type="submit">Create a new blog</button>
</form>

<%- include("partials/footer") %>