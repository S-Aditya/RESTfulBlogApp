<%- include ("partials/header") %>

<div class="container">
    <div class="jumbotron" style="width: 100%; margin: 25px auto;">

        <h1>Edit the BlogPost</h1>

        <form action="/blogs/<%= match._id %>?_method=PUT"  method="POST">
            
            <div class="form-group">
                <label>TITLE</label>
                <input class="form-control"  type="text" name="blog[title]" value = " <%= match.title %> " >
            </div>
            
            <div class="form-group">
                <label>IMAGE</label>
                <input class="form-control" type="text" name="blog[image]" value = " <%= match.image %> " >
            </div>

            <div class="form-group">
                <label>BLOG CONTENT</label>
                <textarea name="blog[body]" rows="6" class="form-control"> <%= match.body %> </textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="submit">SUBMIT</button>
           </div>

        </form>

    </div>
</div>

<a href="/blogs">Go Back</a>

<%- include ("partials/footer") %>