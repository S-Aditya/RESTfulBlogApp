<%- include ("partials/header") %>

<div class="container">
    <div class="jumbotron" style="width: 50%; margin: 25px auto;">

        <h1>Create a New BlogPost</h1>

        <form action="/blogs" method="POST">
            
            <div class="form-group">
                <label>TITLE</label>
                <input class="form-control"  type="text" name="blog[title]" placeholder="title">
            </div>
            
            <div class="form-group">
                <label>IMAGE</label>
                <input class="form-control" type="text" name="blog[image]" placeholder="image url">
            </div>

            <div class="form-group">
                <label>BLOG CONTENT</label>
                <textarea name="blog[body]" rows="6" placeholder="Type the blog post here" class="form-control"></textarea>
            </div>

            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block" type="submit">SUBMIT</button>
           </div>

        </form>

    </div>
</div>

<a href="/blogs">Go Back</a>

